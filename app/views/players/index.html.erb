<p id="notice"><%= notice %></p>

<h1>Players</h1>

<table>
  <thead>
    <tr>
      <th>Rank</th>
      <th>Name</th>
      <th>Position</th>
      <th>Team</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @players.each do |player| %>
      <tr>
        <td><%= player.rank %></td>
        <td><%= link_to player.name, player %></td>
        <td><%= player.position %></td>
        <td><%= player.nfl_team %></td>
        <td><%= link_to 'Draft', new_player_plays_on_path(player) %></td>
      </tr>
    <% end %>
  </tbody>
</table>

